<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- General -->
    <PreferenceCategory
        android:key="pref_general_settings"
        android:title="@string/pref_general_settings_title">
        <EditTextPreference
            android:capitalize="words"
            android:inputType="textCapWords"
            android:key="display_name"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_display_name" />
    </PreferenceCategory>

    <!-- Audio -->
    <PreferenceCategory
        android:key="pref_audio_settings"
        android:title="@string/pref_audio_settings_title">
        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_audio_enabled"
            android:title="@string/pref_audio_enabled" />
    </PreferenceCategory>
</PreferenceScreen>