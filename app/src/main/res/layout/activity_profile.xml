<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navigation_drawer">

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/miles_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/miles_all_time"
            android:layout_alignBottom="@+id/miles_all_time"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp" />

        <TextView
            android:id="@+id/miles_all_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="26dp" />

        <TextView
            android:id="@+id/best_pace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="96dp"
            android:layout_marginStart="52dp" />
        <TextView
            android:id="@+id/average_pace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/best_pace"
            android:layout_alignBottom="@+id/best_pace"
            android:layout_alignStart="@+id/miles_week" />
        <TextView
            android:id="@+id/num_workouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="90dp"
            android:layout_below="@+id/best_pace"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ddd" />

</android.support.v4.widget.DrawerLayout>